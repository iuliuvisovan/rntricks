<!DOCTYPE html>
<html lang="en">
  <head>
    <title>
      <%= article.title %>
    </title>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="rntricks.com" />
    <meta name="description" content="<%= article.subtitle %>" />
    <meta name="author" content="rntricks.com" />
    <meta name="theme-color" content="#303947" />
    <meta property="og:url" content="https://rntricks.com/article/<%= article.url %>" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="<%= article.title %>" />
    <meta property="og:description" content="/article/<%= article.subtitle %>/img/cover.jpg" />
    <meta property="og:image" content="https://rntricks.com/article/<%= article.url %>/img/cover.jpg" />
    <%- include partials/resources.ejs %>
  </head>

  <body>
    <%- include('partials/header', { selectedPage: article.type }) %>

    <div id="fb-root"></div>
    <script
      async
      defer
      crossorigin="anonymous"
      src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=306856700168414&autoLogAppEvents=1"
    ></script>
    <div class="article">
      <div class="article-header">
        <h1 class="article-title">
          <%= article.title %>
        </h1>
      </div>

      <h4 class="article-subtitle">
        <%= article.subtitle %>
      </h4>

      <div>
        <a class="article-type" style="background-color: <%= article.color %>;" href="category.html"><%= article.type %> </a>
        <span class="article-date">
          <%= moment(article.date, 'DD/MM/YYYY').format('MMMM DD, YYYY') %>
        </span>
      </div>
      <img class="article-cover" src="/article/<%= article.url %>/img/cover.jpg" alt="Laptop with React Native code" />

      <div class="article-body">
        <%- article.body.map(block => mapBlockToHtml(block, article.url)).join('') %>
      </div>
    </div>

    <br />
    <br />
    Found this article useful?
    <br />
    <br />
    <div class="fb-share-button" data-href="https://www.rntricks.com/article/<%= article.url %>" data-layout="box_count" data-size="large">
      <a
        target="_blank"
        href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.rntricks.com%2Farticle%2F<%= article.url %>%2F&amp;src=sdkpreparse"
        class="fb-xfbml-parse-ignore"
        >Share</a
      >
    </div>

    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.24.0/moment.min.js"
      integrity="sha256-4iQZ6BVL4qNKlQ27TExEhBN1HFPvAvAMbFavKKosSWQ="
      crossorigin="anonymous"
    ></script>

    <script src="js/app.js"></script>
    <script>
      (function (i, s, o, g, r, a, m) {
        i['GoogleAnalyticsObject'] = r;
        (i[r] =
          i[r] ||
          function () {
            (i[r].q = i[r].q || []).push(arguments);
          }),
          (i[r].l = 1 * new Date());
        (a = s.createElement(o)), (m = s.getElementsByTagName(o)[0]);
        a.async = 1;
        a.src = g;
        m.parentNode.insertBefore(a, m);
      })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

      ga('create', 'UA-162918443-3', 'auto');
      ga('send', 'pageview');
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '5 seconds');
      }, 5000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '10 seconds');
      }, 10000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '15 seconds');
      }, 15000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '20 seconds');
      }, 20000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '25 seconds');
      }, 20000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '30 seconds');
      }, 30000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '60 seconds');
      }, 60000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '120 seconds');
      }, 120000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '240 seconds');
      }, 240000);
      setTimeout(() => {
        ga('send', 'event', 'Time elapsed', '360 seconds');
      }, 360000);
    </script>
  </body>
</html>
