<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "NewsArticle",
    "mainEntityOfPage": {
      "@type": "WebPage",
      "@id": "https://www.rntricks.com<%= article.url %>"
    },
    "headline": "<%= article.title %>",
    "image": ["https://www.rntricks.com<%= article.coverImageUrl %>"],
    "datePublished": "<%= article.datePublishedJsonLd %>",
    "dateModified": "<%= article.datePublishedJsonLd %>",
    "author": { "@type": "Organization", "name": "RNTricks" },
    "publisher": {
      "@type": "Organization",
      "name": "RNTricks",
      "url": "https://www.rntricks.com/",
      "logo": { "@type": "ImageObject", "url": "https://www.rntricks.com/img/logo-small.png" }
    },
    "description": "<%= article.subtitle || (article.body[0].innerText + article.body[1].innerText) %>"
  }
</script>
