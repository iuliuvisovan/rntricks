<!-- Header -->
<header id="header">
  <!-- Nav -->
  <div id="nav">
    <!-- Main Nav -->
    <div id="nav-fixed">
      <div class="container">
        <!-- logo -->
        <div class="nav-logo" style="display: flex; align-items: center;">
          <a href="/" class="logo">
            <picture>
              <source srcset="/img/logo-small.webp" type="image/webp" />
              <source srcset="/img/logo-small.png" type="image/jpeg" />
              <img style="margin-top: 4px;" src="/img/logo-small.png" alt="RNTricks logo" />
            </picture>
          </a>
          <a href="/">
            <h1 style="display: inline-block; width: auto; margin: 0; margin-left: 5px; font-size: 40px; font-weight: 100; letter-spacing: -3px;">
              <span style="padding-right: 4px; font-weight: 400;">RN</span>TRICKS
            </h1>
          </a>
        </div>
        <!-- /logo -->
        <!-- nav -->
        <ul class="nav-menu nav navbar-nav">
          <li><a href="/" class="<%= selectedPage == 'Home' ? 'selected' : '' %>">Home</a></li>
          <li class="cat-1"><a href="/category/articles" class="<%= selectedPage == 'Articles' ? 'selected' : '' %>">Articles</a></li>
          <li class="cat-2"><a href="/category/tips-n-tricks" class="<%= selectedPage == 'Tips & Tricks' ? 'selected' : '' %>">Tips & Tricks</a></li>
          <li class="cat-3"><a href="/category/answers" class="<%= selectedPage == 'Answer' ? 'selected' : '' %>">Answers</a></li>
          <li class="cat-4"><a href="/category/tutorials" class="<%= selectedPage == 'Tutorial' ? 'selected' : '' %>">Tutorials</a></li>
        </ul>
        <!-- /nav -->

        <!-- search & aside toggle -->
        <div class="nav-btns">
          <!-- <button class="aside-btn"><i class="fa fa-bars"></i></button> -->
          <button aria-label="Search" class="search-btn"><i class="fa fa-search"></i></button>
          <div class="search-form <%= (locals.query||'').trim().length && 'active' %>">
            <input
              autofocus
              class="search-input"
              type="text"
              placeholder="Find article..."
              onkeyup="event.keyCode == 13 && (window.location.href = '/search?q=' + this.value)"
              name="search"
              value="<%= locals.query || '' %>"
            />
            <button class="search-close"><i class="fa fa-times"></i></button>
          </div>
        </div>
        <!-- /search & aside toggle -->
      </div>
    </div>
    <!-- /Main Nav -->
  <div id="fb-root"></div>
  <script
    async
    defer
    crossorigin="anonymous"
    src="https://connect.facebook.net/en_US/sdk.js#xfbml=1&version=v6.0&appId=306856700168414&autoLogAppEvents=1"
  ></script>
</header>
<!-- /Header -->
